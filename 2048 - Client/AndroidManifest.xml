<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pdsd.application"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pdsd.application.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden" >
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pdsd.application.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.pdsd.application.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.pdsd.application.HomeActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.pdsd.application.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.pdsd.application.JoinGameActivity"
            android:label="@string/title_activity_hosts"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.pdsd.application.LobbyActivity"
            android:label="@string/title_activity_lobby"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.pdsd.application.CreateGameActivity"
            android:label="@string/title_activity_create_game"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="com.pdsd.application.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden">
        </activity>
    </application>

</manifest>
